pipeline { 
 environment { 
 registry = "salmakhadidi/tp4" 
 registryCredential = 'DokcerHub'  
 dockerImage = '' 
 } 
 agent any 
 stages { 
 stage('Cloning Git') { 
 steps { 
 git 'https://github.com/salma-didi/bigData-TP4.git' 
 } 
 } 
 stage('Building image') { 
 steps{ 
 script { 
 dockerImage = docker.build registry + ":$BUILD_NUMBER"  } 
 }
}
stage('Test image') {
steps{
script {

echo "Tests passed"
}
}
}
stage('Publish Image') {
steps{
script {
docker.withRegistry( '', registryCredential ) {
dockerImage.push()
}
}
}
}
}
}